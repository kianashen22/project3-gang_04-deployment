
<!DOCTYPE html>
<head>
   <title>Order Summary</title>
   <link rel="stylesheet" href="/css/customerStyle.css">
   <link rel="stylesheet" href="/css/colorblindstyle.css" id="colorblindStylesheet" disabled>
</head>
<body>
  <%- include("../partials/customerNavBar") %>
  
  <!--    this is the start of google translate code-->
  <div id="google_translate_element"></div>
  <script type="text/javascript">
      function googleTranslateElementInit() {
          new google.translate.TranslateElement({pageLanguage: 'en', includedLanguages: 'zh-CN,pt,ru,es,fil'}, 'google_translate_element');
      }
  </script>
  <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
  <!--    this is the end of google translate code-->

   <h1>Order Summary</h1>

   <% 
   const items = (typeof order !== 'undefined' && order && Array.isArray(order.drinks)) ? order.drinks : [];
   const calcSubtotal = items.reduce((s, d) => {
     const p = Number(d.price) || 0;
     const t = Number(d.toppingCharge) || 0;
     const q = Number(d.quantity) || 1;
     return s + (p + t) * q;
   }, 0);
   const subtotal = (typeof totals !== 'undefined' && totals && typeof totals.subtotal !== 'undefined') ? totals.subtotal : calcSubtotal;
   const tax = (typeof totals !== 'undefined' && totals && typeof totals.tax !== 'undefined') ? totals.tax : subtotal * 0.085;
   const total = (typeof totals !== 'undefined' && totals && typeof totals.total !== 'undefined') ? totals.total : subtotal + tax;
 %>

 <% if (items.length === 0) { %>
   <p>No items in the cart.</p>
 <% } else { %>
   <ol>
     <% items.forEach(function(d, i) { 
          const unit = (Number(d.price) || 0) + (Number(d.toppingCharge) || 0);
          const qty = Number(d.quantity) || 1;
          const line = unit * qty;
     %>
       <li>
         <div><strong><%= d.name %></strong></div>
         <div>Quantity: <%= qty %></div>
         <div>Unit Price: $<%= unit.toFixed(2) %></div>
         <% if (d.size) { %><div>Size: <%= d.size %></div><% } %>
         <% if (d.iceLevel) { %><div>Ice: <%= d.iceLevel %></div><% } %>
         <% if (d.sweetnessLevel) { %><div>Sweetness: <%= d.sweetnessLevel %></div><% } %>
         <% if (d.topping) { %><div>Topping: <%= d.topping %></div><% } %>
         <% if (d.action) { %><div>Action: <%= d.action %></div><% } %>
         <div>Line Total: $<%= line.toFixed(2) %></div>
       </li>
       <form method="POST" action="/customer/cart/remove">
        <input type="hidden" name="index" value="<%= i %>">
        <button type="submit">x</button>
      </form>
      <div id = "editButton">
        <form action="/customer/editItem" method="POST">
            <input type="hidden" name="itemIndex" value="<%= i %>">
            <button type="submit"><img src = "/img/edit.png" alt = "edit item"></button>
        </form>
      </div>
     <% }); %>
   </ol>

   <h3>Totals</h3>
   <div>Subtotal: $<%= subtotal.toFixed(2) %></div>
   <div>Tax: $<%= tax.toFixed(2) %></div>
   <div>Total: $<%= total.toFixed(2) %></div>
 <% } %>

 <a class = "button" href="/customer/orderConfirmation">Check out</a>
 <script>
  const cbToggle = document.getElementById("colorblindToggle");
  const cbSheet = document.getElementById("colorblindStylesheet");

  // Load saved preference
  if (localStorage.getItem("colorblind") === "on") {
    cbSheet.disabled = false;
  }

  // Toggle on click
  cbToggle.addEventListener("click", () => {
    cbSheet.disabled = !cbSheet.disabled;

    localStorage.setItem(
      "colorblind",
      cbSheet.disabled ? "off" : "on"
    );
  });
</script>
</body>