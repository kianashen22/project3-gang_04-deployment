<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Order Confirmation</title>
    <link rel="stylesheet" href="/css/customerStyle.css">
    <link rel="stylesheet" href="/css/colorblindstyle.css" id="colorblindStylesheet" disabled>
  </head>
  <body>
<!---------- NAV BAR --------->
<div class = "customerNavBarContainer">
   <div id = "left">
      
      <div>   
         <a href = "customerOrder">
             <img src = "/img/skipBack.png"> Back</a>
      </div>
      <div>
            <% if (user) { %>
               <a href="customerProfile"><img src = "/img/profile.png"> </a>
            <% } %>
      </div>
      <div>
         <a href = "orderSummary" >
            <img src = "/img/shoppingCart.png">Cart</a>
      </div>

      <label class="switch">
         <input type="checkbox" onclick = "toggleFont()" class = "toggleFont" checked>
         <span class="slider round">
            <span class="small-a">A</span>
            <span class="big-a">A</span>
         </span>
      </label>
    </div>

    <div id = "right">
      <div class = "rightItem">
               <!--    this is the start of google translate code-->
               <button id = "translateButton" class = "translateButtonStyling">
                  <img src = "/img/globe.png">
               </button>
               <div id="google_translate_element" style="display: none;"></div>
               <script type="text/javascript">
                  function googleTranslateElementInit() {
                     new google.translate.TranslateElement({pageLanguage: 'en', includedLanguages: 'zh-CN,pt,ru,es,fil'}, 'google_translate_element');
                  }
               </script>
               <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
               <!--    this is the end of google translate code-->

      </div>
      <div class="rightItem">
         <button id="colorblindToggle" class="toggleFont">
           Colorblind Mode
         </button>
       </div>
      <div class = "rightItem">
             <% if (user) { %>
 
                  <form action = "/customerLogout" method = "POST">
                     <button id="logoutButton" type = "submit">Logout</button>
                  </form>
            <% } 
            else { %>
               <%- include('../partials/weatherNav', { weather: weather }) %>
            <% } %>

      </div>

    </div>
</div>
<!---------- NAV BAR  END--------->

    <audio controls autoplay loop>
        <source src = "/sound/santa-moving-sound.mp3" type = "audio/mpeg">
    </audio>
    <img id ="santaAnimation" src= "/img/santa-emma-gif.gif">

    <div class = "pageContainer">
      <div id = "thankYouCard">
        <h1>Thank you for your order!</h1>
        <p>It will be ready shortly</p>
      </div>

      <div id = "confirmButtonContainer">
        <% if (user) { %>
          <a href="/customerLogout" class="confirmPageButtons">Log out</a>
        <% } else { %>
          <a href="customerHome" class = "confirmPageButtons">Exit</a>
        <% } %>
        <a href="customerOrder" class = "confirmPageButtons">Order More</a>
      </div>

    </div>

    <script src = "/js/customerHandler.js"></script> 
    <script>
      const cbToggle = document.getElementById("colorblindToggle");
      const cbSheet = document.getElementById("colorblindStylesheet");
    
      // Load saved preference
      if (localStorage.getItem("colorblind") === "on") {
        cbSheet.disabled = false;
      }
    
      // Toggle on click
      cbToggle.addEventListener("click", () => {
        cbSheet.disabled = !cbSheet.disabled;
    
        localStorage.setItem(
          "colorblind",
          cbSheet.disabled ? "off" : "on"
        );
      });
    </script>
    <script src = "/js/googleTranslateHandler.js"></script>
  </body>
</html>