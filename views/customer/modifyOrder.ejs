<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Modify Order Item: <%= drink.name %></title>
    <link rel="stylesheet" href="/css/customerStyle.css">
    <link rel="stylesheet" href="/css/colorblind.css" id="colorblindStylesheet" disabled>
  </head>
<body class="modifyOrder">

    <div class="housekeepingHeader">

          <!--    this is the start of google translate code-->
          <div id="google_translate_element"></div>
          <script type="text/javascript">
              function googleTranslateElementInit() {
                  new google.translate.TranslateElement({pageLanguage: 'en', includedLanguages: 'zh-CN,pt,ru,es,fil'}, 'google_translate_element');
              }
          </script>
          <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
          <!--    this is the end of google translate code-->

      <div><p><button onclick = "toggleFont()" class = "toggleFont" >toggle font size - Aa</button></p></div>
    </div>


    <h1>Modify Order Item: <%= drink.name %></h1>
    <p>Base Price: $<%= Number(drink.base_price ?? drink.price).toFixed(2) %></p>

    <form action="/customer/updateCartItem" method="POST">

      <input type="hidden" name="itemIndex" value="<%= index %>">
      

      <input type="hidden" name="name" value="<%= drink.name %>" />
      <input type="hidden" name="price" value="<%= Number(drink.base_price ?? drink.price) %>" />

      <input type="hidden" id="sizeField" name="size" value="<%= drink.size %>" />
      <input type="hidden" id="iceField" name="iceLevel" value="<%= drink.iceLevel %>" />
      <input type="hidden" id="sweetField" name="sweetnessLevel" value="<%= drink.sweetnessLevel %>" />
      <input type="hidden" id="toppingField" name="topping" value="<%= drink.topping %>" />

      <!-- Quantity -->
      <h3>Quantity</h3>
      <input type="number" id="quantity" name="quantity" value="<%= drink.quantity %>" min="1">

  <!--    list of toppings added-->
  <!--    new price of item being modified-->

      <!-- Size -->
      <h3>Size</h3>
      <div id="sizeGroup">
        <% ['small','regular','large'].forEach(function(size){ %>
          <button type="button" data-size="<%= size %>"><%= size %></button>
        <% }) %>
      </div>

      <!-- Ice Level -->
      <h3>Ice Level</h3>
      <div id="iceGroup">
        <% (iceLevels && iceLevels.length ? iceLevels : ['no ice','light ice','regular','extra ice']).forEach(function(i){ %>
          <button type="button" data-ice="<%= i %>"><%= i %></button>
        <% }) %>
      </div>

      <!-- Sweetness -->
      <h3>Sweetness</h3>
      <div id="sweetGroup">
        <% (sugarLevels && sugarLevels.length ? sugarLevels : ['0%','30%','50%','80%','100%','120%']).forEach(function(s){ %>
          <button type="button" data-sweet="<%= s %>"><%= s %></button>
        <% }) %>
      </div>

      <!-- Toppings -->
      <h3>Topping (optional)</h3>
      <div id="toppingGroup">
        <% (toppings || []).forEach(function(t){ %>
          <button type="button" data-topping="<%= t.topping_name || t.name %>">
            <%= t.topping_name || t.name %>
          </button>
        <% }) %>
      </div>

      <br>
      <button type="submit" class="submit">Save Change</button>
      <br><br>


    </form>

  <script src = "/js/toggleFont.js"></script>

  <script>
      function setupSingleSelect(groupId, dataAttr, hiddenId) {
        const group = document.getElementById(groupId);
        if (!group) return;

        const buttons = group.querySelectorAll('button[data-' + dataAttr + ']');
        const hidden = document.getElementById(hiddenId);

        group.addEventListener('click', (e) => {
          const btn = e.target.closest('button[data-' + dataAttr + ']');
          if (!btn) return;

          const val = btn.dataset[dataAttr];
          document.getElementById(hiddenId).value = val;

          buttons.forEach(b => b.classList.remove('active'));

          // add active to clicked button
          btn.classList.add('active');
        });

          buttons.forEach(btn => {
            if (btn.dataset[dataAttr] == hidden.value) {
              btn.classList.add('active');
            }
        });
      }

      setupSingleSelect('sizeGroup', 'size', 'sizeField');
      setupSingleSelect('iceGroup', 'ice', 'iceField');
      setupSingleSelect('sweetGroup', 'sweet', 'sweetField');

      // Single-select Topping
      (function() {
        const group = document.getElementById('toppingGroup');
        const field = document.getElementById('toppingField');
        
        const buttons = group.querySelectorAll('button[data-topping]');
       
        // preload default user selection
        buttons.forEach(btn => {
          if (btn.dataset.topping === field.value) {
            btn.classList.add('active');
          }
        });

        // if (!group || !field) return;
        group.addEventListener('click', (e) => {
          const btn = e.target.closest('button[data-topping]');
          if (!btn) return;

          const value = btn.dataset.topping;

          // Toggle off if same topping clicked twice
          if (field.value === value) {
            // unselect
            field.value = '';

            btn.classList.remove('active');
          } else {
            field.value = value;
            buttons.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
          }
        });
      })();

      // Action
      (function() {
        const group = document.getElementById('actionGroup');
        const field = document.getElementById('actionField');

        const buttons = group.querySelectorAll('button[data-action]');

        // if (!group || !field) return;
        group.addEventListener('click', (e) => {
          const btn = e.target.closest('button[data-action]');
          if (!btn) return;

          field.value = btn.dataset.action;

          buttons.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
        });

        // preload default
        buttons.forEach(btn => {
          if (btn.dataset.action === field.value) {
            btn.classList.add('active');
          }
        });
        
      })();
    </script>
  </body>
</html>