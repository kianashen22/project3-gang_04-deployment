    <div class="menu-mod-page">
    <h2 class="add-title">Add New Menu Item</h2>

    <div class="add-item-card">
      <form action="/manager/insertMenuItem" method="POST" class="add-item-form">
    
        <div class="form-group">
          <label>Menu Item ID</label>
          <!--consider making automatic increment-->
          <input type="number" id="beverage_info_id" name="id" required>
        </div>
    
        <div class="form-group">
          <label>Name</label>
          <input type="text" id="name" name="name" required>
        </div>
    
        <div class="form-group">
          <label>Price</label>
          <input type="number" step="0.01" id="price" name="price" required>
        </div>
    
        <div class="form-group">
          <label>Category</label>
          <select id="category" name="category" required>
            <option value="Fresh Brew Tea">Fresh Brew Tea</option>
            <option value="Fruit Tea">Fruit Tea</option>
            <option value="Ice Blended">Ice Blended</option>
            <option value="Milk Tea">Milk Tea</option>
            <option value="Seasonal">Seasonal</option>
            <option value="Hot">Hot</option>
          </select>
        </div>
    
        <button type="submit" class="add-btn">Add Item</button>
    
      </form>
    </div>
    <h1>Menu Items</h1>
    <div class="menu">
        <% for (var i in beverage_info) { %>
          <div class="menu-item-box">
      
            <div class="item-details">
                <p><strong>Name:</strong> <%= beverage_info[i].name %></p>
              <p><strong>ID:</strong> <%= beverage_info[i].beverage_info_id %></p>

              <p><strong>Price:</strong> $<%= beverage_info[i].price %></p>
              <p><strong>Category:</strong> <%= beverage_info[i].category %></p>
            </div>
      
            <div class="item-actions">
      
              <!-- EDIT BUTTON -->
              <form action="/manager/updateMenuItem" method="POST">
                <input type="hidden" name="id" value="<%= beverage_info[i].beverage_info_id %>">
                <button type="submit" class="edit-btn">Edit</button>
              </form>
      
              <!-- REMOVE BUTTON -->
              <form action="/manager/removeMenuItem" method="POST">
                <input type="hidden" name="id" value="<%= beverage_info[i].beverage_info_id %>">
                <button type="submit" class="delete-btn">X</button>
              </form>
      
            </div>
      
          </div>
        <% } %>
      </div>

