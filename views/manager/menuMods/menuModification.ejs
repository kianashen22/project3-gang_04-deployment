    <a href = "managerHome">Back</a>
    <a href = "/logout"> Logout </a>
    <h1>Menu Items</h1>
    <div class="menu">
        <% for (var i in beverage_info) {%>
        <p>Item ID: <%=beverage_info[i].beverage_info_id%>, Name: <%=beverage_info[i].name%>, Price: <%=beverage_info[i].price%>, Category: <%=beverage_info[i].category%></p>
        <% } %>
    </div>

    <div class="modification-options">
        <h2>Remove Menu Item</h2>
        <form action="/manager/removeMenuItem" method="POST">
            <label>Menu Item Index:</label>
            <input type="number" id="beverage_info_id" name="id" required>
            <button type="submit">Remove Item</button>
        </form>

        <h2>Add New Menu Item</h2>
        <form action="/manager/insertMenuItem" method="POST">
            <label>Menu Item Index:</label>
<!--             consider changing to automatically increment to prevent random numbers-->
            <input type="number" id="beverage_info_id" name="id" required>
            <label>Name:</label>
            <input type="text" id="name" name="name" required>
            <label>Price:</label>
            <input type="number" step="0.01" id="price" name="price" required>
            <label>Category:</label>
<!--             consider changing to dropdown to prevent random categories-->
            <input type="text" id="category" name="category" required>
            <button type="submit">Add Item</button>
        </form>

        <h2>Edit Menu Item</h2>
        <form action="/manager/updateMenuItem" method="POST">
            <label>Menu Item Index:</label>
            <input type="number" id="beverage_info_id" name="id" required>
            <button type="submit">Go To Item</button>
        </form>
    </div>
</body>
